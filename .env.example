# =============================================================================
# Chatbot NLU Trainer & Evaluator Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your production values
# NEVER commit the actual .env file to version control!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
CLIENT_URL=http://localhost:5173

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
# JWT Secret Key - MUST be at least 32 characters in production
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas Connection String (Primary)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/chatbot-nlu?retryWrites=true&w=majority

# Local MongoDB (Alternative)
# MONGO_URI=mongodb://localhost:27017/chatbot-nlu

# Database Connection Options
MONGO_OPTIONS=retryWrites=true&w=majority
DB_TIMEOUT=10000

# =============================================================================
# AI/ML BACKEND CONFIGURATIONS
# =============================================================================

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium
HUGGINGFACE_API_URL=https://api-inference.huggingface.co
HUGGINGFACE_API_TIMEOUT=30000

# Rasa Configuration (Optional)
RASA_SERVER_URL=http://localhost:5005
RASA_PROJECT_PATH=./rasa_projects
RASA_API_TIMEOUT=30000
RASA_TRAINING_ENDPOINT=/model/train
RASA_PREDICTION_ENDPOINT=/model/parse

# spaCy Configuration (Optional)  
SPACY_MODEL_PATH=./spacy_models
SPACY_DEFAULT_MODEL=en_core_web_sm
SPACY_API_URL=http://localhost:8000
SPACY_API_TIMEOUT=30000

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.json,.csv,.txt
MAX_FILES_PER_UPLOAD=5

# File Storage Paths
MODELS_DIR=./uploads/models
TRAINING_RESULTS_DIR=./uploads/training-results
AVATARS_DIR=./uploads/avatars
ENTITY_ANNOTATIONS_DIR=./uploads/entity-annotations
ACTIVE_LEARNING_DIR=./uploads/active-learning

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/application.log
ERROR_LOG_FILE=./logs/error.log
ACCESS_LOG_FILE=./logs/access.log

# Log Rotation
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS (Only for development)
# =============================================================================
# Enable in development only
# DEBUG=true
# ENABLE_CORS=true
# ENABLE_DETAILED_ERRORS=true